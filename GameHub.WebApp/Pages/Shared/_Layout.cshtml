<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameHub.WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/toast.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GameHub.WebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        /* Enhanced Navigation */
        .navbar {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-weight: 700;
            color: white !important;
            font-size: 1.5rem;
        }

        .navbar-nav .nav-link {
            color: rgba(255, 255, 255, 0.9) !important;
            font-weight: 500;
            transition: all 0.3s ease;
            border-radius: 8px;
            margin: 0 2px;
        }

        .navbar-nav .nav-link:hover {
            color: white !important;
            background: rgba(255, 255, 255, 0.1);
            transform: translateY(-1px);
        }

        .navbar-toggler { border: none; color: white; }
        .navbar-toggler:focus { box-shadow: none; }

        /* Avatar */
        .nav-avatar { width: 32px; height: 32px; border-radius: 50%; object-fit: cover; }

        /* Enhanced Footer */
        .footer { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 20px 0; margin-top: 50px; }
        .footer a { color: rgba(255, 255, 255, 0.8); text-decoration: none; }
        .footer a:hover { color: white; }
    </style>
 </head>
@inject GameHub.BLL.Helpers.CurrentUserHelper CurrentUser
@inject Microsoft.Extensions.Configuration.IConfiguration Config
@inject GameHub.BLL.Interfaces.ICartService CartService
@inject GameHub.BLL.Interfaces.IAuthService AuthService
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                @if (CurrentUser.IsLoggedIn())
                {
                    <a class="navbar-brand" asp-area="" asp-page="/Player/Index"><i class="fas fa-gamepad me-2"></i>GameHub</a>
                }
                else
                {
                    <a class="navbar-brand" asp-area="" asp-page="/Index"><i class="fas fa-gamepad me-2"></i>GameHub</a>
                }
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (CurrentUser.IsLoggedIn())
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Player/Index">Home</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        @if (CurrentUser.IsLoggedIn())
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Player/Games" asp-route-Filter.SortBy="CreatedAt" asp-route-Filter.IsAscending="false">Latest Games</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Player/Games" asp-route-Filter.SortBy="Price" asp-route-Filter.IsAscending="true">Best Prices</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Player/Games">All Games</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (!CurrentUser.IsLoggedIn())
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Register">Register</a>
                            </li>
                        }
                        else
                        {
                            // Cart preview (top-right)
                            var cartPreviewResult = await CartService.GetCurrentCartAsync(new GameHub.BLL.Models.BasePaginationFilter { Page = 1, PageSize = 4 });
                            var cartPreview = cartPreviewResult.IsSuccess ? cartPreviewResult.Data : null;
                            <li class="nav-item dropdown me-2">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="cartDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-shopping-cart me-1"></i>
                                    @if (cartPreview != null && cartPreview.TotalItems > 0)
                                    {
                                        <span class="badge bg-danger">@cartPreview.TotalItems</span>
                                    }
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end p-2" aria-labelledby="cartDropdown" style="min-width: 320px;">
                                    @if (cartPreview == null || cartPreview.TotalItems == 0)
                                    {
                                        <li class="px-2 py-2 text-muted">Your cart is empty</li>
                                    }
                                    else
                                    {
                                        foreach (var item in cartPreview.CartItems)
                                        {
                                            var baseUrl = Config["BaseUrl"] ?? string.Empty;
                                            var img = string.IsNullOrEmpty(item.GameImagePath)
                                                ? string.Empty
                                                : ($"{baseUrl}{item.GameImagePath}");
                                            <li class="dropdown-item d-flex align-items-center">
                                                <a class="d-flex align-items-center text-decoration-none text-reset w-100" asp-page="/Player/GameDetail" asp-route-id="@item.GameId">
                                                    @if (!string.IsNullOrEmpty(img))
                                                    {
                                                        <img src="@img" alt="@item.GameTitle" style="width:40px;height:40px;object-fit:cover;border-radius:6px;" class="me-2" />
                                                    }
                                                    <div class="flex-grow-1">
                                                        <div class="fw-semibold text-truncate" style="max-width:180px">@item.GameTitle</div>
                                                        <div class="text-muted" style="font-size: 0.85rem;">@item.Price.ToString("C")</div>
                                                    </div>
                                                </a>
                                            </li>
                                        }
                                        if (cartPreview.TotalItems > cartPreview.CartItems.Count)
                                        {
                                            <li><hr class="dropdown-divider" /></li>
                                            <li class="px-3 py-1 text-muted" style="font-size: 0.9rem;">and @(cartPreview.TotalItems - cartPreview.CartItems.Count) more...</li>
                                        }
                                        <li><hr class="dropdown-divider" /></li>
                                        <li class="px-2">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="fw-semibold">Total:</span>
                                                <span class="fw-bold">@cartPreview.TotalPrice.ToString("C")</span>
                                            </div>
                                        </li>
                                        <li class="px-2 pt-2">
                                            <a class="btn btn-primary w-100" asp-page="/Player/Cart">Go to cart</a>
                                        </li>
                                    }
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @{ 
                                        var profileRes = await AuthService.GetProfileAsync();
                                        var navBaseUrl = Config["BaseUrl"] ?? string.Empty;
                                        var avatarPath = profileRes.IsSuccess ? profileRes.Data?.AvatarPath : null;
                                        var username = profileRes.IsSuccess ? profileRes.Data?.Username : null;
                                        var src = string.IsNullOrEmpty(avatarPath) ? string.Empty : $"{navBaseUrl}{avatarPath}";
                                    }
                                    @if (!string.IsNullOrEmpty(src))
                                    {
                                        <img src="@src" alt="avatar" class="nav-avatar me-2" />
                                    }
                                    else
                                    {
                                        <i class="fas fa-user-circle me-2"></i>
                                    }
                                    <span class="d-none d-sm-inline text-white-50">@username</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                                    @{
                                        var p = await AuthService.GetProfileAsync();
                                        var profBaseUrl = Config["BaseUrl"] ?? string.Empty;
                                        var pAvatar = p.IsSuccess ? p.Data?.AvatarPath : null;
                                        var pName = p.IsSuccess ? p.Data?.Username : null;
                                        var pSrc = string.IsNullOrEmpty(pAvatar) ? string.Empty : $"{profBaseUrl}{pAvatar}";
                                    }
                                    <li class="px-3 py-2 d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(pSrc))
                                        {
                                            <img src="@pSrc" alt="avatar" class="me-2" style="width:28px;height:28px;border-radius:50%;object-fit:cover;" />
                                        }
                                        else
                                        {
                                            <i class="fas fa-user-circle me-2"></i>
                                        }
                                        <span class="fw-semibold">@pName</span>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" asp-page="/Player/Profile"><i class="fas fa-id-card me-2"></i>View Profile</a></li>
                                    <li><a class="dropdown-item" asp-page="/Player/Registrations"><i class="fas fa-list me-2"></i>My Registrations</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form method="post" asp-page="/Logout" class="px-3 py-1">
                                            <button type="submit" class="btn btn-link p-0 text-danger"><i class="fas fa-sign-out-alt me-2"></i>Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <!-- Toast Container -->
    <div id="toastContainer" class="toast-container"></div>

    <!-- Toast Messages -->
    <partial name="_ToastMessages" />

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - GameHub.WebApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/toast.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>