@page "/Admin/Game/Edit/{id:int}"
@model GameHub.WebApp.Pages.Admin.Game.EditModel

@{
    ViewData["Title"] = "Edit Game";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Edit Game</h1>
    <a asp-page="Index" class="btn btn-outline-secondary">Back to List</a>
</div>

@if (!string.IsNullOrEmpty(TempData["ErrorMessage"] as string))
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="card">
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            <input type="hidden" asp-for="Id" />
            
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="GameRequest.Title" class="form-label">Game Title</label>
                        <input asp-for="GameRequest.Title" class="form-control" placeholder="Enter game title" />
                        <span asp-validation-for="GameRequest.Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="GameRequest.Price" class="form-label">Price ($)</label>
                        <input asp-for="GameRequest.Price" class="form-control" type="number" step="0.01" placeholder="0.00" />
                        <span asp-validation-for="GameRequest.Price" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="GameRequest.ReleaseDate" class="form-label">Release Date</label>
                        <input asp-for="GameRequest.ReleaseDate" class="form-control" type="date" />
                        <span asp-validation-for="GameRequest.ReleaseDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="GameRequest.CategoryId" class="form-label">Category</label>
                        <select asp-for="GameRequest.CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
                            <option value="">-- Select Category --</option>
                        </select>
                        <span asp-validation-for="GameRequest.CategoryId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="GameRequest.DeveloperId" class="form-label">Developer</label>
                        <select asp-for="GameRequest.DeveloperId" class="form-select" asp-items="ViewBag.DeveloperId">
                            <option value="">-- Select Developer --</option>
                        </select>
                        <span asp-validation-for="GameRequest.DeveloperId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a asp-page="Index" class="btn btn-secondary me-md-2">Cancel</a>
                <input type="submit" value="Update Game" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
