@page "/Admin/Developer/Delete/{id:int}"
@model GameHub.WebApp.Pages.Admin.Developer.DeleteModel

@{
    ViewData["Title"] = "Delete Developer";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Delete Developer</h1>
    <a asp-page="./Index" class="btn btn-outline-secondary">Back to List</a>
</div>

<div class="alert alert-warning">
    <h4 class="alert-heading">⚠️ Confirm Deletion</h4>
    <p>Are you sure you want to delete this developer? This action cannot be undone.</p>
</div>

<div class="card">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">Developer to Delete: @Model.Developer.DeveloperName</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8"><strong>@Model.Developer.DeveloperName</strong></dd>
                    
                    <dt class="col-sm-4">Website:</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.Developer.Website))
                        {
                            <a href="@Model.Developer.Website" target="_blank" class="text-decoration-none">
                                @Model.Developer.Website
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">No website</span>
                        }
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8">
                        <span class="badge @(Model.Developer.IsActive ? "bg-success" : "bg-secondary")">
                            @(Model.Developer.IsActive ? "Active" : "Inactive")
                        </span>
                    </dd>
                    
                    <dt class="col-sm-4">Developer ID:</dt>
                    <dd class="col-sm-8">#@Model.Developer.Id</dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <form method="post" class="d-inline">
            <div class="d-flex justify-content-between">
                <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
                <div>
                    <a asp-page="./Details" asp-route-id="@Model.Developer.Id" class="btn btn-outline-info me-2">View Details</a>
                    <input type="submit" value="Delete Developer" class="btn btn-danger" 
                           onclick="return confirm('Are you absolutely sure you want to delete this developer?')" />
                </div>
            </div>
        </form>
    </div>
</div>