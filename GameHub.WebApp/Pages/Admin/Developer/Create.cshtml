@page "/Admin/Developer/Create"
@model GameHub.WebApp.Pages.Admin.Developer.CreateModel

@{
    ViewData["Title"] = "Create Developer";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Create New Developer</h1>
    <a asp-page="Index" class="btn btn-outline-secondary">Back to List</a>
</div>

@if (!string.IsNullOrEmpty(TempData["ErrorMessage"] as string))
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="card">
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="DeveloperRequest.DeveloperName" class="form-label">Developer Name</label>
                        <input asp-for="DeveloperRequest.DeveloperName" class="form-control" placeholder="Enter developer name" />
                        <span asp-validation-for="DeveloperRequest.DeveloperName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="DeveloperRequest.Website" class="form-label">Website (Optional)</label>
                        <input asp-for="DeveloperRequest.Website" class="form-control" type="url" placeholder="https://example.com" />
                        <span asp-validation-for="DeveloperRequest.Website" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a asp-page="Index" class="btn btn-secondary me-md-2">Cancel</a>
                <input type="submit" value="Create Developer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
