@page "/Admin/GameCategory/Delete/{id:int}"
@model GameHub.WebApp.Pages.Admin.GameCategory.DeleteModel

@{
    ViewData["Title"] = "Delete Game Category";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Delete Game Category</h1>
    <a asp-page="./Index" class="btn btn-outline-secondary">Back to List</a>
</div>

<div class="alert alert-warning">
    <h4 class="alert-heading">⚠️ Confirm Deletion</h4>
    <p>Are you sure you want to delete this category? This action cannot be undone.</p>
</div>

<div class="card">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">Category to Delete: @Model.GameCategory.CategoryName</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8"><strong>@Model.GameCategory.CategoryName</strong></dd>
                    
                    <dt class="col-sm-4">Description:</dt>
                    <dd class="col-sm-8">@(Model.GameCategory.Description ?? "No description")</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8">
                        <span class="badge @(Model.GameCategory.IsActive ? "bg-success" : "bg-secondary")">
                            @(Model.GameCategory.IsActive ? "Active" : "Inactive")
                        </span>
                    </dd>
                    
                    <dt class="col-sm-4">Category ID:</dt>
                    <dd class="col-sm-8">#@Model.GameCategory.Id</dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <form method="post" class="d-inline">
            <div class="d-flex justify-content-between">
                <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
                <div>
                    <a asp-page="./Details" asp-route-id="@Model.GameCategory.Id" class="btn btn-outline-info me-2">View Details</a>
                    <input type="submit" value="Delete Category" class="btn btn-danger" 
                           onclick="return confirm('Are you absolutely sure you want to delete this category?')" />
                </div>
            </div>
        </form>
    </div>
</div>