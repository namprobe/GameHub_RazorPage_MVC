@page "/Admin/GameCategory/Details/{id:int}"
@model GameHub.WebApp.Pages.Admin.GameCategory.DetailsModel

@{
    ViewData["Title"] = "Category Details";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Category Details</h1>
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.GameCategory.Id" class="btn btn-outline-warning">Edit</a>
        <a asp-page="./Index" class="btn btn-outline-secondary">Back to List</a>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h4 class="mb-0">@Model.GameCategory.CategoryName</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8">@Model.GameCategory.CategoryName</dd>
                    
                    <dt class="col-sm-4">Description:</dt>
                    <dd class="col-sm-8">@(Model.GameCategory.Description ?? "No description")</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8">
                        <span class="badge @(Model.GameCategory.IsActive ? "bg-success" : "bg-secondary")">
                            @(Model.GameCategory.IsActive ? "Active" : "Inactive")
                        </span>
                    </dd>
                    
                    <dt class="col-sm-4">Category ID:</dt>
                    <dd class="col-sm-8">#@Model.GameCategory.Id</dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-between">
            <a asp-page="./Delete" asp-route-id="@Model.GameCategory.Id" class="btn btn-danger">Delete Category</a>
            <div>
                <a asp-page="./Edit" asp-route-id="@Model.GameCategory.Id" class="btn btn-warning me-2">Edit Category</a>
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>