@page "/Player/Games"
@model GameHub.WebApp.Pages.Player.GamesModel
@inject Microsoft.Extensions.Configuration.IConfiguration Config

@{
    ViewData["Title"] = "All Games";
    Layout = "_Layout";
    string baseUrl = Config["BaseUrl"] ?? string.Empty;
}

<style>
    /* Games Page Styles */
    .games-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 40px 0;
        margin-bottom: 30px;
    }

    .games-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 10px;
    }

    .games-subtitle {
        font-size: 1.1rem;
        opacity: 0.9;
    }

    /* Filter Section */
    .filter-section {
        background: white;
        border-radius: 15px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        padding: 25px;
        margin-bottom: 30px;
        border: 1px solid #f8f9fa;
    }

    .filter-title {
        font-size: 1.3rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
    }

    .filter-title i {
        margin-right: 10px;
        color: #667eea;
    }

    /* Game Cards */
    .game-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: all 0.3s ease;
        height: 100%;
        border: 1px solid #f8f9fa;
        text-decoration: none;
        color: inherit;
        display: block;
    }

    .game-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
        text-decoration: none;
        color: inherit;
    }

    .game-card-image {
        height: 200px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 3rem;
        position: relative;
        overflow: hidden;
    }

    .game-card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .game-card-image::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="card-grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="white" opacity="0.1"/><circle cx="75" cy="75" r="1" fill="white" opacity="0.1"/><circle cx="50" cy="10" r="0.5" fill="white" opacity="0.1"/><circle cx="10" cy="60" r="0.5" fill="white" opacity="0.1"/><circle cx="90" cy="40" r="0.5" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23card-grain)"/></svg>');
        opacity: 0.3;
    }

    .game-card-body {
        padding: 20px;
    }

    .game-title {
        font-size: 1.2rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 10px;
        line-height: 1.3;
    }

    .game-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
    }

    .game-price {
        font-size: 1.3rem;
        font-weight: 700;
        color: #e74c3c;
    }

    .game-category {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .game-developer {
        color: #7f8c8d;
        font-size: 0.9rem;
        margin-bottom: 10px;
    }

    .game-stats {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.85rem;
        color: #7f8c8d;
    }

    .game-status {
        padding: 4px 8px;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .status-active {
        background: #d4edda;
        color: #155724;
    }

    .status-inactive {
        background: #f8d7da;
        color: #721c24;
    }

    /* Results Info */
    .results-info {
        background: white;
        border-radius: 10px;
        padding: 15px 20px;
        margin-bottom: 20px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        border: 1px solid #f8f9fa;
    }

    .results-count {
        font-weight: 600;
        color: #2c3e50;
    }

    .results-filters {
        color: #7f8c8d;
        font-size: 0.9rem;
    }

    /* Pagination */
    .pagination .page-link {
        border: none;
        color: #667eea;
        font-weight: 600;
        border-radius: 8px;
        margin: 0 2px;
    }

    .pagination .page-link:hover {
        background: rgba(102, 126, 234, 0.1);
        color: #667eea;
    }

    .pagination .page-item.active .page-link {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-color: #667eea;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .games-title {
            font-size: 2rem;
        }
        
        .game-card-image {
            height: 150px;
        }
        
        .filter-section {
            padding: 20px;
        }
    }
</style>

<!-- Games Header -->
<section class="games-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="games-title">ðŸŽ® All Games</h1>
                <p class="games-subtitle">Discover and explore our complete collection of games</p>
            </div>
            <div class="col-lg-4 text-end">
                <a asp-page="/Player/Index" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left me-2"></i>Back to Home
                </a>
            </div>
        </div>
    </div>
</section>

<div class="container">
    <!-- Filter Section -->
    <div class="filter-section">
        <h3 class="filter-title">
            <i class="fas fa-filter"></i>Search & Filter Games
        </h3>
        
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label asp-for="Filter.Title" class="form-label">Game Title</label>
                <input asp-for="Filter.Title" class="form-control" placeholder="Search by title..." />
            </div>
            
            <div class="col-md-2">
                <label asp-for="Filter.CategoryId" class="form-label">Category</label>
                <select asp-for="Filter.CategoryId" class="form-select">
                    <option value="">All Categories</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.CategoryName</option>
                    }
                </select>
            </div>
            
            <div class="col-md-2">
                <label asp-for="Filter.DeveloperId" class="form-label">Developer</label>
                <select asp-for="Filter.DeveloperId" class="form-select">
                    <option value="">All Developers</option>
                    @foreach (var developer in Model.Developers)
                    {
                        <option value="@developer.Id">@developer.DeveloperName</option>
                    }
                </select>
            </div>
            
            <div class="col-md-2">
                <label asp-for="Filter.SortBy" class="form-label">Sort By</label>
                <select asp-for="Filter.SortBy" class="form-select">
                    <option value="">Default (CreatedAt)</option>
                    <option value="CreatedAt">Created Date</option>
                    <option value="Title">Title</option>
                    <option value="Price">Price</option>
                    <option value="ReleaseDate">Release Date</option>
                    <option value="RegistrationCount">Most Played</option>
                </select>
            </div>
            
            <div class="col-md-2">
                <label asp-for="Filter.IsAscending" class="form-label">Order</label>
                <select asp-for="Filter.IsAscending" class="form-select">
                    <option value="">Default (Descending)</option>
                    <option value="true">Ascending</option>
                    <option value="false">Descending</option>
                </select>
            </div>
            
            <div class="col-md-1">
                <label asp-for="Filter.PageSize" class="form-label">Page Size</label>
                <select asp-for="Filter.PageSize" class="form-select">
                    <option value="12">12</option>
                    <option value="24">24</option>
                    <option value="48">48</option>
                </select>
            </div>
            
            <div class="col-12 d-flex justify-content-between align-items-end">
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search me-2"></i>Search
                    </button>
                    <a asp-page="/Player/Games" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Clear
                    </a>
                </div>
                
                <div class="text-muted">
                    <small>Showing @Model.Games.Items?.Count() of @Model.Games.TotalItems games</small>
                </div>
            </div>
        </form>
    </div>

    <!-- Results Info -->
    @if (Model.Games.IsSuccess && Model.Games.Items?.Any() == true)
    {
        <div class="results-info">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <span class="results-count">Found @Model.Games.TotalItems games</span>
                    @if (!string.IsNullOrEmpty(Model.Filter.Title) || Model.Filter.CategoryId.HasValue || Model.Filter.DeveloperId.HasValue)
                    {
                        <span class="results-filters">
                            @if (!string.IsNullOrEmpty(Model.Filter.Title))
                            {
                                <span class="badge bg-primary me-1">Title: @Model.Filter.Title</span>
                            }
                            @if (Model.Filter.CategoryId.HasValue)
                            {
                                var category = Model.Categories.FirstOrDefault(c => c.Id == Model.Filter.CategoryId);
                                if (category != null)
                                {
                                    <span class="badge bg-info me-1">Category: @category.CategoryName</span>
                                }
                            }
                            @if (Model.Filter.DeveloperId.HasValue)
                            {
                                var developer = Model.Developers.FirstOrDefault(d => d.Id == Model.Filter.DeveloperId);
                                if (developer != null)
                                {
                                    <span class="badge bg-success me-1">Developer: @developer.DeveloperName</span>
                                }
                            }
                        </span>
                    }
                </div>
                <div class="col-md-6 text-end">
                    <small class="text-muted">
                        Page @Model.Games.CurrentPage of @Model.Games.TotalPages
                    </small>
                </div>
            </div>
        </div>

        <!-- Games Grid -->
        <div class="row g-4">
            @foreach (var game in Model.Games.Items)
            {
                var imgSrc = string.IsNullOrEmpty(game.ImagePath) ? null : ($"{baseUrl}{game.ImagePath}");
                <div class="col-lg-4 col-md-6">
                    <div class="game-card">
                        <div class="game-card-image">
                            @if (!string.IsNullOrEmpty(imgSrc))
                            {
                                <img src="@imgSrc" alt="@game.Title" />
                            }
                            else
                            {
                                <div style="position: relative; z-index: 2;">ðŸŽ®</div>
                            }
                        </div>
                        <div class="game-card-body">
                            <h5 class="game-title">@game.Title</h5>
                            <div class="game-meta">
                                <span class="game-price">$@game.Price.ToString("F2")</span>
                                <span class="game-category">@(game.Category?.CategoryName ?? "No Category")</span>
                            </div>
                            <div class="game-developer">
                                <i class="fas fa-building me-1"></i>@(game.Developer?.DeveloperName ?? "No Developer")
                            </div>
                            <div class="game-stats">
                                <span><i class="fas fa-users me-1"></i>@game.RegistrationCount players</span>
                                <span class="game-status @(game.IsActive ? "status-active" : "status-inactive")">
                                    @(game.IsActive ? "Active" : "Inactive")
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.Games.TotalPages > 1)
        {
            <nav aria-label="Games pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                    @if (Model.Games.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-page="/Player/Games" 
                               asp-route-Filter.Page="@(Model.Games.CurrentPage - 1)" 
                               asp-route-Filter.PageSize="@Model.Filter.PageSize" 
                               asp-route-Filter.Title="@Model.Filter.Title" 
                               asp-route-Filter.CategoryId="@Model.Filter.CategoryId" 
                               asp-route-Filter.DeveloperId="@Model.Filter.DeveloperId" 
                               asp-route-Filter.SortBy="@Model.Filter.SortBy" 
                               asp-route-Filter.IsAscending="@Model.Filter.IsAscending">
                                <i class="fas fa-chevron-left"></i> Previous
                            </a>
                        </li>
                    }

                    @for (int i = Math.Max(1, Model.Games.CurrentPage - 2); i <= Math.Min(Model.Games.TotalPages, Model.Games.CurrentPage + 2); i++)
                    {
                        <li class="page-item @(i == Model.Games.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-page="/Player/Games" 
                               asp-route-Filter.Page="@i" 
                               asp-route-Filter.PageSize="@Model.Filter.PageSize" 
                               asp-route-Filter.Title="@Model.Filter.Title" 
                               asp-route-Filter.CategoryId="@Model.Filter.CategoryId" 
                               asp-route-Filter.DeveloperId="@Model.Filter.DeveloperId" 
                               asp-route-Filter.SortBy="@Model.Filter.SortBy" 
                               asp-route-Filter.IsAscending="@Model.Filter.IsAscending">@i</a>
                        </li>
                    }

                    @if (Model.Games.CurrentPage < Model.Games.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-page="/Player/Games" 
                               asp-route-Filter.Page="@(Model.Games.CurrentPage + 1)" 
                               asp-route-Filter.PageSize="@Model.Filter.PageSize" 
                               asp-route-Filter.Title="@Model.Filter.Title" 
                               asp-route-Filter.CategoryId="@Model.Filter.CategoryId" 
                               asp-route-Filter.DeveloperId="@Model.Filter.DeveloperId" 
                               asp-route-Filter.SortBy="@Model.Filter.SortBy" 
                               asp-route-Filter.IsAscending="@Model.Filter.IsAscending">
                                Next <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="text-center py-5">
            <div style="font-size: 4rem; opacity: 0.3; margin-bottom: 1rem;">ðŸŽ®</div>
            <h3 class="text-muted">No games found</h3>
            <p class="text-muted">Try adjusting your search criteria or filters.</p>
            <a asp-page="/Player/Games" class="btn btn-primary">
                <i class="fas fa-refresh me-2"></i>Clear Filters
            </a>
        </div>
    }
</div>
