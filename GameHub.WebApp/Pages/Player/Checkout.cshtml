@page "/Player/Checkout"
@model GameHub.WebApp.Pages.Player.CheckoutModel
@{
    ViewData["Title"] = "Checkout";
}

<div class="container py-4">
    <h2 class="mb-4">Checkout</h2>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">Items</h5>

                    @if (Model.Items != null && Model.Items.Any())
                    {
                        <div class="row g-2">
                            @foreach (var it in Model.Items)
                            {
                                var baseUrl = Model.Config["BaseUrl"] ?? string.Empty;
                                var img = string.IsNullOrEmpty(it.ImagePath) ? string.Empty : ($"{baseUrl}{it.ImagePath}");
                                <div class="col-12">
                                    <div class="border rounded-3 p-3 shadow-sm d-flex align-items-start gap-3">
                                        @if (!string.IsNullOrEmpty(img))
                                        {
                                            <img src="@img" alt="@it.Title" style="width:140px;height:80px;object-fit:cover;border-radius:8px;" />
                                        }
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1 text-truncate">@it.Title</h6>
                                            <div class="small text-muted">Item in your checkout</div>
                                        </div>
                                        <div class="text-end">
                                            <div class="fw-bold mb-2">@it.Price.ToString("C")</div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        @if (!Model.GameId.HasValue)
                        {
                            <div class="d-flex justify-content-between align-items-center mt-2">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-outline-primary @(Model.HasPrevious ? string.Empty : "disabled")" asp-page="/Player/Checkout" asp-route-Filter.Page="@(Model.Filter.Page - 1)" asp-route-Filter.PageSize="@Model.Filter.PageSize"><i class="fas fa-chevron-left"></i></a>
                                    <a class="btn btn-sm btn-outline-primary @(Model.HasNext ? string.Empty : "disabled")" asp-page="/Player/Checkout" asp-route-Filter.Page="@(Model.Filter.Page + 1)" asp-route-Filter.PageSize="@Model.Filter.PageSize"><i class="fas fa-chevron-right"></i></a>
                                </div>
                            </div>
                        }
                    }

                    <h5 class="card-title mb-3">Payment Method</h5>

                    <form method="post">
                        <input type="hidden" asp-for="GameId" />

                        <div class="form-check mb-3">
                            <input class="form-check-input" type="radio" id="pm-vnpay" name="PaymentMethod" value="VNPay" checked />
                            <label class="form-check-label" for="pm-vnpay">
                                <img src="/imgs/vnpay.webp" alt="VNPay" style="height:20px;" class="me-2" /> VNPay (default)
                            </label>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Proceed to VNPay</button>
                            <a asp-page="/Player/Cart" class="btn btn-outline-secondary">Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">Summary</h5>
                    @if (Model.Summary != null)
                    {
                        <div class="d-flex justify-content-between mb-1"><span>Items</span><strong>@Model.Summary.TotalItems</strong></div>
                        <div class="d-flex justify-content-between"><span>Total</span><strong>@Model.Summary.TotalPrice.ToString("C")</strong></div>
                    }
                    else
                    {
                        <div class="text-muted small">Registering a single game.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


